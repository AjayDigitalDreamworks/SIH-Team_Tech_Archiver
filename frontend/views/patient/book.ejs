<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MediCure - Patient Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/css/login-style.css" rel="stylesheet" />
    <link href="/css/book.css" rel="stylesheet" />
    <link href="/css/dash-style.css" rel="stylesheet" />
</head>
<style>
  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 5px;
    text-align: center;
}

.calendar-day {
    padding: 10px;
    background-color: #f4f4f4;
    cursor: pointer;
    border-radius: 5px;
}

.calendar-day:hover {
    background-color: #007bff;
    color: white;
}

.empty {
    background-color: transparent;
}

.time-slot {
    padding: 10px;
    margin: 5px 0;
    background-color: #f4f4f4;
    cursor: pointer;
    border-radius: 5px;
}

.time-slot:hover {
    background-color: #007bff;
    color: white;
}

</style>
<body>
    <div class="d-flex">
        <!-- Sidebar (unchanged) -->
        <nav class="sidebar bg-light">
            <div class="sidebar-header p-3">
                <h4 class="text-primary fw-bold">
                    <img src="/images/logo.jpg" width="100px" height="50px" alt="">
                </h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/patient/dashboard">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patient/bookappointments">
                        <i class="bi bi-calendar-check"></i> Book Appointment
                    </a>
                </li>
                 <li class="nav-item">
                <a class="nav-link" href="/patient/admission/list">
                    <i class="bi bi-calendar-check"></i> View Medical Records
                </a>
            </li>
                <li class="nav-item">
            <a
              class="nav-link"
              href="/patient/admission"
            >
              <i class="bi bi-person-plus"></i> Admit Records
            </a>
          </li>
            </ul>
           
        </nav>

        <!-- Main Content -->
        <main class="main-content flex-grow-1">
           <div class="top-bar bg-white border-bottom p-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Book Appointment</h5>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-light"><i class="bi bi-person-circle fs-4 text-muted"></i></button>
                <a class="dropdown-item" href="/api/auth/logout"
                  ><i class="bi bi-box-arrow-right"></i> Logout</a>
            </div>
        </div>

            <!-- Content Area -->
            <div class="content-area p-4">
                <!-- Book New Appointment Section -->
                <section class="booking-section">
    <h1>Book a New Appointment</h1>
    <p class="subtitle">Select your preferred department, doctor, date, and time slot to schedule your consultation.</p>
         <% if (msg) { %>
                        <div style="padding: 10px; margin-bottom: 10px; 
                            <%= msg.includes('Error') ? 'color: red; border: 1px solid red;' : 
                            msg.includes('Success') ? 'color: green; border: 1px solid green;' : 
                            'color: blue; border: 1px solid blue;' %>">
                            <%= msg %>
                        </div>
                    <% } %>
    <form action="/patient/book-appointment" method="POST">
        <div class="booking-form">
            <div class="form-column">
                <h3>Select Department</h3>
                <select id="departmentSelect" required name="department" class="form-select">
                    <option value="">Choose Department</option>
                    <% 
                        // Unique departments ka list banate hain
                        const departments = [...new Set(doctor.map(doc => doc.department))];
                        departments.forEach(dept => { 
                    %>
                        <option value="<%= dept %>"><%= dept %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-column">
                <h3>Choose Doctor</h3>
                <p class="help-text">Available doctors in your selected department.</p>
                <select id="doctorContainer" required name="doctor" class="form-select">
                    <option value="">Choose Doctor</option>
                </select>
            </div>

            <div class="form-column">
                <h3>Select Date</h3>
                <p class="help-text">Choose a convenient date and time slot.</p>
                <input type="date" required name="date" class="form-control">
            </div>
            <div class="form-column">
                <h3>Select Time</h3>
                <p class="help-text">Choose a convenient date and time slot.</p>
                <input type="time" required name="time" class="form-control">
            </div>
        </div>

        <button id="confirmAppointment" class="confirm-btn">Confirm Appointment</button>
    </form>
</section>

<script>
    // Backend se doctors ka data JS me le aate hain
    const doctors = <%- JSON.stringify(doctor) %>;

    const departmentSelect = document.getElementById('departmentSelect');
    const doctorContainer = document.getElementById('doctorContainer');

    departmentSelect.addEventListener('change', function () {
        const selectedDept = this.value;

        // Pehle saare options clear kar dete hain
        doctorContainer.innerHTML = '<option value="">Choose Doctor</option>';

        if (selectedDept) {
            // Filter doctors jo selected department me hain
            const filteredDoctors = doctors.filter(doc => doc.department === selectedDept);

            // Har doctor ko option me add karte hain
            filteredDoctors.forEach(doc => {
                const option = document.createElement('option');
                option.value = doc.name;
                option.textContent = doc.name;
                doctorContainer.appendChild(option);
            });
        }
    });
</script>


                <!-- My Appointments Section -->
                <section class="appointments-section mt-4">
    <h2>My Appointments</h2>
    <p class="subtitle">Overview of your upcoming, completed, and cancelled appointments.</p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>Doctor</th>
                    <th>Department</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (appointments && appointments.length > 0) { %>
                    <% appointments.forEach(appointment => { %>
                        <tr>
                            <td><%= appointment.doctor %></td>
                            <td><%= appointment.department %></td>
                            <td><%= new Date(appointment.date).toLocaleDateString() %></td>
                            <td><%= appointment.time %></td>
                            <td>
                                <% if (appointment.status === "confirmed") { %>
                                    <span class="badge bg-info text-dark"><%= appointment.status %></span>
                                <% } else if (appointment.status === "completed") { %>
                                    <span class="badge bg-success"><%= appointment.status %></span>
                                <% } else { %>
                                    <span class="badge bg-danger"><%= appointment.status %></span>
                                <% } %>
                            </td>
                            <td>

                                <% if (appointment.status === "rescheduled") { %>
<button class="btn btn-warning" onclick="rescheduleAppointment('<%= appointment._id %>')">Reschedule</button>
<button class="btn btn-warning" onclick="cancelAppointment('<%= appointment._id %>')">Cancel</button>

<form action="/patient/appoint/<%=appointment._id %>/delete" method="post">
       <button class="btn btn-danger">Delete</button>
    </form>
                                <% } else if (appointment.status === "completed") { %>
                                    <em>No actions</em>
                                <% } else if(appointment.status === "Pending") { %>
<button class="btn btn-warning my-2" onclick="cancelAppointment('<%= appointment._id %>')">Cancel</button>

<form action="/patient/appoint/<%=appointment._id %>/delete" method="post">
       <button class="btn btn-danger">Delete</button>
    </form>
                                <% } %>
                                
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-muted">No appointments available.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>

            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
    <script src="/js/appointment.js"></script>
</body>
</html>
