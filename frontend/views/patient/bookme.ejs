<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartHosp - Hospital Management System</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <link href="/css/login-style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <nav class="sidebar bg-light">
        <div class="sidebar-header p-3">
          <h4 class="text-primary fw-bold">
            <i class="bi bi-hospital text-primary"></i> <img src="/images/logo.jpg" width="100px" height="50px" alt="">
          </h4>
        </div>

        <ul class="nav flex-column">
          <li class="nav-item">
            <a
              class="nav-link {% if request.endpoint == 'dashboard' %}active{% endif %}"
              href="/patient/dashboard"
            >
              <i class="bi bi-speedometer2"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="/patient/bookappointments"
            >
              <i class="bi bi-calendar-check"></i>Book Appointment
            </a>
          </li>
         </ul>

        <div class="mt-auto p-3">
          <div class="dropdown">
            <a
              class="btn btn-outline-secondary dropdown-toggle w-100"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
            >
              <i class="bi bi-person-circle"></i>
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="#"
                  ><i class="bi bi-gear"></i> Settings</a
                >
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <a class="dropdown-item" href="/api/auth/logout"
                  ><i class="bi bi-box-arrow-right"></i> Logout</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
<style>
     .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-container h3 {
            color: #007bff;
            font-weight: bold;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-control {
            border-radius: 8px;
            box-shadow: none;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
      <!-- Main Content -->
      <main class="main-content flex-grow-1">
        <div
          class="top-bar bg-white border-bottom p-3 d-flex justify-content-between align-items-center"
        >
          <div>
            <h5 class="mb-0">Dashboard</h5>
          </div>
          <div class="d-flex align-items-center gap-3">
            <button class="btn btn-light"><i class="bi bi-bell"></i></button>
            <button class="btn btn-light"><i class="bi bi-gear"></i></button>
            <div class="user-avatar">
              <i class="bi bi-person-circle fs-4 text-muted"></i>
            </div>
          </div>
        </div>

       

<div class="content-area p-4">
 <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="form-container">
                    <h3 class="text-center">Book an Appointment</h3>
                    <form action="/patient/book-appointment" method="POST">
                        <!-- Doctor Selection -->
                        <div class="form-group">
                            <label for="doctor">Select Doctor</label>
                            <select id="doctor" name="doctor" class="form-control" required>
                                <!-- Populate doctor options dynamically -->
                                <% doctors.forEach(doctor => { %>
                                    <option value="<%= doctor.name %>">
                                        <%= doctor.name %> (<%= doctor.department %>)
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <!-- Department Selection -->
                        <div class="form-group">
                            <label for="department">Select Department</label>
                            <select id="department" name="department" class="form-control" required>
                                <!-- Populate department options dynamically -->
                                <% doctors.forEach(doctor => { %>
                                    <option value="<%= doctor.department %>">
                                        <%= doctor.department %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <!-- Date Selection -->
                        <div class="form-group">
                            <label for="date">Select Date</label>
                            <input type="date" id="date" name="date" class="form-control" required />
                        </div>

                        <!-- Time Slot Selection -->
                        <div class="form-group">
                            <label for="time">Select Time Slot</label>
                            <select id="time" name="time" class="form-control" required>
                                <option value="9:00 AM">9:00 AM</option>
                                <option value="10:00 AM">10:00 AM</option>
                                <option value="11:00 AM">11:00 AM</option>
                                <option value="12:00 PM">12:00 PM</option>
                                <!-- Additional time slots can be added -->
                            </select>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Book Appointment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

                <!-- Download Reports Section -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h4>Download Reports</h4>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action">
                                Appointment with Dr. Jane Smith (Cardiology) - Report
                            </a>
                            <a href="#" class="list-group-item list-group-item-action">
                                Appointment with Dr. Robert Johnson (Dermatology) - Report
                            </a>
                            <a href="#" class="list-group-item list-group-item-action">
                                Appointment with Dr. Emily Davis (Pediatrics) - Report
                            </a>
                            <a href="#" class="list-group-item list-group-item-action">
                                Appointment with Dr. Michael Brown (Orthopedics) - Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
  </body>
</html>
